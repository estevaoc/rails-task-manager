<h1>New task</h1>
<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div><br>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details %>
</div><br>

<%= f.submit class: 'btn-btn-primary' %>
<% end %><br>

